<!DOCTYPE html>
<html>
<head>
  <title>The Reserve</title>
  <%= favicon_link_tag 'wine-glass.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="/path/to/jquery-latest.js"></script>
  <script type="text/javascript" src="/node_modules/tablesorter/dist/js/jquery.tablesorter.js"></script>
</head>
<body>

  <div class="navbar navbar-fixed-top" role="navigation">
   <div class="container">
     <div class="navbar-header">
     </div>
     <div class="navbar-header pull-right">
       <% if current_user %>
         <%= link_to 'View Bottles', user_wine_bottles_path(@user), class: 'navbar-brand' %>
         <%= link_to 'Sign Out', signout_path, class: 'navbar-brand' %>
       <% else %>
       <% unless controller_name =="welcome" %>
       <%= link_to 'Sign Up', signup_path, class: 'navbar-brand' %>
         <%= link_to 'Sign In', signin_path, class: 'navbar-brand' %>
         <% end %>
       <% end %>
     </div>
   </div>
 </div>

  <div class="container">
    <% flash.each do |type, message| %>
   <% if type == "notice" %>
   <div class="alert alert-success"><b><center><%= message %></b></center></div>
   <% elsif type == "alert" %>
   <div class="alert alert-danger"><b><center><%= message %></b></center></div>
   <% end %>
   <% end %>

    <script type="text/javascript" src="http://leaverou.github.io/prefixfree/prefixfree.min.js"></script>

    <div id="plate">

        <div id="bottle">
            <div class="cork"></div>
            <div class="neck"></div>
            <div class="body">
                <!-- <div class="label"></div>
                <div class="label-shadow"></div> -->
            </div>
        </div>

        <!-- <div id="cork">
        </div>

        <div id="glass">
            <div class="bowl">
                <div class="wine"></div>
            </div>
            <div class="stem"></div>
            <div class="foot"></div>
        </div> -->
      </div>

    <h1><b>The Reserve</b></h1>
    <%= yield %>

  </div>

</body>
</html>
