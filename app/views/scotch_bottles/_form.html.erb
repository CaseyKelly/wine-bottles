<div class="well col-md-offset-3 col-md-6">
  <%= simple_form_for [@user, @scotch_bottle], html: {:class => "form-horizontal"} do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :vintage %>
      <%= f.input :notes %>
      <%= f.input :location %>
      <%= f.input :size %>
      <%= f.input :quantity %>
      <%= f.input :rating %>
      <%= f.association :user %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
